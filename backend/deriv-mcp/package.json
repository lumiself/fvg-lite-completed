{
  "name": "deriv-mcp-server",
  "version": "2.0.0",
  "description": "MCP server for Deriv API integration - comprehensive trading data, account management, and market analysis",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "deriv-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "deriv",
    "trading",
    "api",
    "forex",
    "synthetic-indices",
    "cryptocurrency",
    "commodities"
  ],
  "author": "Deriv MCP Server Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/deriv-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/deriv-mcp-server/issues"
  },
  "homepage": "https://github.com/your-org/deriv-mcp-server#readme"
}
